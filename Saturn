using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _9_laba
{
    internal class Saturn : Planet, IRequireSurvivalTest, IRequireSamples
    {
        public bool RequireSurvivalTest { get; set; }
        public bool HaveAngryResidents { get; set; }
        public bool RequireSamples { get; set; }
        public Saturn(bool angryRes, bool needProbs, bool test)
        {
            HaveAngryResidents = angryRes;
            RequireSamples = needProbs;
            RequireSurvivalTest = test;
        }
        public override string Name { get { return "Сатурн"; } }

        public override string Check(Student student)
        {
            if (!HaveAngryResidents)
            {
                if (!student.HasSamples && !student.HasSurvTest)
                {
                    return $"У студента {student.Name} недостаточно образцов и плохой тест выживаемости!";
                }
                else if (!student.HasSamples && student.HasSurvTest)
                {
                    return $"У студента {student.Name} недостаточно образцов!";
                }
                else if (!student.HasSurvTest && student.HasSamples)
                {
                    return $"У студента {student.Name} плохой тест выживаемости!";
                }
                else
                {
                    return $"Студент {student.Name} подходит к выполнению миссии";
                }
            }
            else
            {
                return "На планете зафиксированы враждебные сущности";
            }
        }
    }
}
